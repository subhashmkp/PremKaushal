@model List<PremKaushal.Question>

@{
    ViewBag.Title = "Question";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div id="page-wrapper">

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Questions
                <small>Give Answers of new Questions</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i><a href="@Url.Action("Index", "Admin")">Dashboard</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i>Questions
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        @foreach ( var item in Model)
        {
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">@item.Subject</h3>
                    </div>
                    <div class="panel-body" id="question">
                        <p><span class="badge">Question Id</span> @item.Id</p>
                        <p><span class="badge">Question</span> @item.Question1</p>
                        <p><span class="badge">Created Date</span> @item.CreatedDate</p>
                        <button type="button" name="@item.Id" class="btn btn-default btnModalA" data-toggle="modal" data-target="#myModal">Answer</button>
                        <button type="button" name="@item.CId" class="btn btn-success btnModalC" data-toggle="modal" data-target="#myModal">Contact</button>
                    </div>
                </div>
            </div>
            <!-- /.col-sm-6 -->
        }
    </div>
    
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title" id="myModalLabel">Id: </h4>
                        </div>
                        <div class="modal-body" id="myModalBody">
                            
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
</div>
</div>
<script src="~/Scripts/AdminQuestion.js"></script>
